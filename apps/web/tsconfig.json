{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/registry/*": ["../../packages/registry/registry/new-york/*"],

      "@/components/ui/*": ["../../packages/ui/src/components/*"],
      "@/lib/*": ["../../packages/ui/src/lib/*", "./lib/*"],
      "@/hooks/*": ["../../packages/ui/src/hooks/*", "./hooks/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
