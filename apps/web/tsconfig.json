{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@workspace/registry/blocks/*": ["../../packages/registry/registry/new-york/blocks/*"],

      "@/components/ui/*": ["../../packages/ui/src/components/*"],
      "@/lib/*": ["../../packages/ui/src/lib/*", "./lib/*"],
      "@/hooks/*": ["../../packages/ui/src/hooks/*", "./hooks/*"],
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
, "app/[locale]/(main)/docs/page.mdx"  ],
  "exclude": ["node_modules"]
}
