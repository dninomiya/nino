{
  "extends": "@workspace/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/registry/*": ["./registry/new-york/*"],
      "@/components/ui/*": ["../ui/src/components/*"],
      "@/lib/*": ["../ui/src/lib/*"],
      "@/hooks/*": ["../ui/src/hooks/*"],
      "@/ui/*": ["../ui/src/components/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
